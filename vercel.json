{
  "version": 2,
  "builds": [
    {
      "src": "./index.js", 
      "use": "@vercel/node"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
  }
  ],
  "routes": [
    { 
      "source": "/api/(.*)",
      "destination": "/api/index.js"
    },
    { 
      "source": "/",
      "destination": "/public/index.html"
    },
    { 
      "source": "/(.+)",
      "destination": "/public/$1"
    }
  ]
}